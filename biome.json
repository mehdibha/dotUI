{
  "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!.turbo",
      "!.source"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      },
      "correctness": {
        "noInvalidPositionAtImportRule": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ["react", "react/**", "react-native", "react-native/**"],
              ["next", "next/**"],
              { "type": false, "source": [":PACKAGE:", "!@dotui/**"] },
              { "type": true, "source": [":PACKAGE:", "!@dotui/**"] },
              ":BLANK_LINE:",
              { "type": false, "source": ["@dotui/**"] },
              { "type": true, "source": ["@dotui/**"] },
              ":BLANK_LINE:",
              ["@/**"],
              ["../"],
              ["./"],
              { "type": true, "source": ["../", "./"] }
            ]
          }
        }
      }
    }
  }
}
