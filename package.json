{
  "name": "dotui",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "mehdibha",
    "url": "https://x.com/mehdibha_"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:cli": "turbo --filter=dotui-cli build",
    "build:registry": "pnpm --filter=web build:registry",
    "build:demos": "pnpm --filter=web build:demos",
    "dev": "turbo run dev --parallel",
    "cli:dev": "turbo --filter=dotui-cli dev",
    "cli:start": "pnpm --filter=dotui-cli start",
    "docs:build": "pnpm --filter=web build:docs",
    "www:dev": "pnpm --filter=web dev",
    "www:build": "pnpm --filter=web build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "preview": "turbo run preview",
    "typecheck": "turbo run typecheck",
    "format:write": "turbo run format:write",
    "format:check": "turbo run format:check",
    "prepare": "husky install",
    "check": "turbo lint typecheck format:check"
  },
  "packageManager": "pnpm@9.5.0",
  "dependencies": {
    "@babel/core": "^7.22.1",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@typescript-eslint/parser": "^5.59.7",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.9",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "3.13.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "3.3.7",
    "tailwindcss-animate": "^1.0.5",
    "tailwindcss-react-aria-components": "^1.1.2",
    "tsx": "^4.1.4",
    "turbo": "^2.0.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.27",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.22",
    "typescript": "^5.5.3"
  }
}