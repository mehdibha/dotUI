{
  "name": "dotui-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "mehdibha",
    "url": "https://x.com/mehdibha_"
  },
  "workspaces": [
    "www",
    "packages/*",
    "packages/config/*",
    "templates/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:cli": "turbo --filter=dotui-cli build",
    "build:www": "pnpm --filter=web build",
    "build:registry": "pnpm --filter=web build:registry",
    "build:docs": "pnpm --filter=web build:docs",
    "dev": "turbo run dev --parallel",
    "dev:cli": "turbo --filter=dotui-cli dev",
    "dev:www": "pnpm --filter=web dev",
    "start:cli": "pnpm --filter=dotui-cli start",
    "lint": "turbo run lint && manypkg check",
    "lint:fix": "turbo run lint:fix && manypkg fix",
    "format": "turbo run format:write",
    "format:check": "turbo run format:check",
    "preview": "turbo run preview",
    "typecheck": "turbo run typecheck",
    "check": "turbo lint typecheck format:check"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@manypkg/cli": "^0.21.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^8",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^2.1.3",
    "prettier": "^2.8.8",
    "turbo": "^2.0.12"
  },
  "packageManager": "pnpm@9.5.0"
}
