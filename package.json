{
  "name": "dotui-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "mehdibha",
    "url": "https://x.com/mehdibha_"
  },
  "keywords": [
    "dotui",
    "next.js",
    "react-aria",
    "tailwind",
    "typescript"
  ],
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:ui": "pnpm --filter=@dotui/ui dev",
    "dev:www": "pnpm --filter=www dev",
    "start:www": "pnpm --filter=www start",
    "build:www": "pnpm --filter=www build",
    "build:registry": "pnpm --filter=@dotui/ui build:registry",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@dotui/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.1",
    "@vitest/coverage-v8": "^2.0.5",
    "prettier": "catalog:",
    "turbo": "^2.5.1",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.0.5"
  },
  "prettier": "@dotui/prettier-config"
}
