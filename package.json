{
  "name": "dotui-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "mehdibha",
    "url": "https://x.com/mehdibha"
  },
  "keywords": [
    "dotui",
    "next.js",
    "react-aria",
    "tailwind",
    "typescript"
  ],
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:www": "pnpm --filter=www dev",
    "start:www": "pnpm --filter=www start",
    "build:www": "pnpm --filter=www build",
    "build:registry": "pnpm --filter=@dotui/registry build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "test": "vitest run",
    "release": "changeset version",
    "pub:beta": "pnpm --filter=tailwindcss-autocontrast pub:beta",
    "pub:release": "pnpm --filter=tailwindcss-autocontrast pub:release"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.3",
    "@vitest/coverage-v8": "^4.0.1",
    "puppeteer": "^24.26.0",
    "turbo": "^2.5.8",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.1"
  }
}
