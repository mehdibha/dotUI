{
	"extends": "@dotui/ts-config/base.json",
	"compilerOptions": {
		"lib": ["ES2022", "dom", "dom.iterable"],
		"jsx": "preserve",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@dotui/registry/*": ["../packages/registry/src/*"]
		},
		"plugins": [{ "name": "next" }],
		"module": "esnext"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"./scripts/**/*.ts",
		"next.config.mjs",
		"eslint.config.mjs"
	],
	"exclude": ["node_modules", "modules/style-editor/**", "app/(internal)/**", "app/(app)/_style-editor/**"]
}
