{
  "extends": "@dotui/ts-config/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@dotui/registry/*": ["./src/*"],
      "@dotui/style-system": ["../style-system/src/index.ts"],
      "@dotui/style-system/*": ["../style-system/src/*"]
    }
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}
