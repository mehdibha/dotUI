{
  "extends": "@dotui/ts-config/internal-package.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext"
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}
