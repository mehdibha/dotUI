{
  "name": "@dotui/registry",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./ui/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./lib/utils": "./src/lib/utils.tsx",
    "./lib/focus-styles.css": "./src/lib/focus-styles/styles.css",
    "./style-system/core": "./src/_style-system/core/index.ts",
    "./style-system/constants": "./src/_style-system/constants.ts",
    "./style-system/schemas": "./src/_style-system/schemas.ts",
    "./style-system/types": "./src/_style-system/types.ts",
    "./style-system/utils": "./src/_style-system/utils/index.ts"
  },
  "scripts": {
    "build:registry": "tsx scripts/build-registry.ts && prettier --log-level silent --write \"src/__registry__/**/*.{ts,tsx}\" --cache",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "peerDependencies": {
    "@hookform/resolvers": "catalog:ui",
    "@internationalized/date": "catalog:ui",
    "@react-aria/utils": "catalog:ui",
    "@react-stately/utils": "catalog:ui",
    "@remixicon/react": "catalog:ui",
    "@tanstack/react-form": "catalog:ui",
    "clsx": "catalog:ui",
    "lucide-react": "catalog:ui",
    "motion": "catalog:ui",
    "react": "catalog:react",
    "react-aria": "catalog:ui",
    "react-aria-components": "catalog:ui",
    "react-dom": "catalog:react",
    "react-hook-form": "catalog:ui",
    "react-stately": "catalog:ui",
    "tailwind-merge": "catalog:ui",
    "tailwind-variants": "catalog:ui"
  },
  "devDependencies": {
    "@dotui/eslint-config": "workspace:*",
    "@dotui/prettier-config": "workspace:*",
    "@dotui/ts-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "shadcn": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@dotui/prettier-config"
}
