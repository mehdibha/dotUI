{
  "name": "@dotui/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./lib/focus-styles": "./src/lib/focus-styles.ts",
    "./lib/utils": "./src/lib/utils.tsx",
    "./globals.css": "./src/globals.css",
    "./block-viewer": "./src/block-viewer.tsx",
    "./registry/components/tabs/motion": "./src/registry/components/tabs/motion.tsx",
    "./registry-blocks": "./src/registry/registry-blocks.ts"
  },
  "license": "MIT",
  "scripts": {
    "build:registry": "tsx scripts/build-registry.ts && prettier --log-level silent --write \"src/__registry__/**/*.{ts,tsx}\" --cache",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@dotui/registry-definition": "workspace:*",
    "@dotui/style-engine": "workspace:*",
    "tailwindcss-auto-contrast": "workspace:*",
    "tw-animate-css": "^1.3.5"
  },
  "peerDependencies": {
    "@hookform/resolvers": "catalog:ui",
    "@internationalized/date": "catalog:ui",
    "@react-aria/utils": "catalog:ui",
    "@react-stately/utils": "catalog:ui",
    "@remixicon/react": "catalog:ui",
    "clsx": "catalog:ui",
    "lucide-react": "catalog:ui",
    "motion": "catalog:ui",
    "react": "catalog:react19",
    "react-aria": "catalog:ui",
    "react-aria-components": "catalog:ui",
    "react-dom": "catalog:react19",
    "react-hook-form": "catalog:ui",
    "react-stately": "catalog:ui",
    "tailwind-merge": "catalog:ui",
    "tailwind-variants": "catalog:ui"
  },
  "devDependencies": {
    "@dotui/eslint-config": "workspace:*",
    "@dotui/prettier-config": "workspace:*",
    "@dotui/ts-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "shadcn": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@dotui/prettier-config"
}
