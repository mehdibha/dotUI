{
  "name": "@dotui/style-engine",
  "version": "0.0.1",
  "description": "Shared style system logic and types",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./src/types.ts"
    },
    "./shadcn-registry": {
      "types": "./dist/shadcn-registry/index.d.ts",
      "default": "./src/shadcn-registry/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@adobe/leonardo-contrast-colors": "^1.0.0",
    "@dotui/registry-definition": "workspace:*",
    "culori": "^4.0.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@dotui/eslint-config": "workspace:*",
    "@dotui/prettier-config": "workspace:*",
    "@dotui/ts-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "shadcn": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@dotui/prettier-config"
}
