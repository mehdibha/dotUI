{
  "name": "@dotui/style-engine",
  "version": "0.0.1",
  "description": "Shared style system logic and types",
  "exports": {
    "./types": "./src/types.ts",
    "./schemas": "./src/schemas.ts",
    "./constants": "./src/constants/index.ts",
    "./presets": "./src/presets.ts",
    "./google-fonts": "./src/constants/google-fonts.ts",
    "./shadcn-registry": "./src/shadcn-registry/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
