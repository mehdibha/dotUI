{
  "name": "@dotui/registry-generator",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./shadcn": "./src/shadcn/index.ts",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "build": "tsx src/build.ts --src ../registry/src --out ./dist",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@dotui/registry": "workspace:*",
    "@dotui/style-system": "workspace:*",
    "@dotui/transformers": "workspace:*",
    "shadcn": "^3.2.1"
  },
  "devDependencies": {
    "@dotui/ts-config": "workspace:*",
    "@types/node": "^22.15.3",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
